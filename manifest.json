{
    "manifest_version": 3,
    "name": "LinkedIn Connection Helper",
    "version": "3.2",
    "description": "Auto-fills personalized connection messages on LinkedIn with advanced resilience and memory management",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "LinkedIn Connection Helper",
      "default_popup": "popup.html"
    }
  }